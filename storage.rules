rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia os arquivos
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Regras específicas para fotos de perfil
    match /profile-pics/{userId}/{fileName} {
      // Permite que o usuário faça upload da própria foto de perfil
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Permite que o usuário atualize ou delete apenas a própria foto
      allow update, delete: if request.auth != null && request.auth.uid == userId;
      
      // Permite que qualquer pessoa veja as fotos de perfil
      allow read: if true;
    }
    
    // Regras mais restritivas para outros caminhos
    match /{allPaths=**} {
      // Por padrão, nega todas as outras operações de escrita
      allow write: if false;
    }
  }
}
